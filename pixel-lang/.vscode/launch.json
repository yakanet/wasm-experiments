  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Launch Program",
      "type": "pwa-node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        //"--inspect-brk",
        "--import-map=import_map.json",
        "--allow-all",
        "${workspaceFolder}\\index.ts",
        "${workspaceFolder}\\examples\\hello.pix"
      ],
      "attachSimplePort": 9229,
      "console": "integratedTerminal"
    }
  ]
}
